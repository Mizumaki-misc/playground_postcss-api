{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "ESNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./scripts/*"]
    }
  },
  "include": ["./scripts/*"]
}
